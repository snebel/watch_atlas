<h1>Top Video Thumbnail for Each Country</h1>

<% @countries.each do |country| %>
  <h2><%= country.name %></h2>  
  <ul>
    <li><img src="<%= country.videos.first.thumbnail_url %>"></li>
    <li>      
      <iframe wdith='360' height='215' src="<%= country.videos.first.youtube_embed %>"></iframe>
    </li>
  </ul>
<% end %>


