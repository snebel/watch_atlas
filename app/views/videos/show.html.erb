<div class="container">
  
  <div class="sixteen columns">
    <h2 class="remove-bottom" style="margin-top: 40px"><%=@video.title%></h2>
    <h4>Genre: <%=@term%></h4>
    <hr />
  </div>

  <div class="five columns">
    <h3>The Video</h3>
    <p>Straight from the YouTube source</p>
  </div>

  <div class="eleven columns">
    <iframe src="<%=@video.embed_url%>" width="100%" height="350px" class="add-bottom"></iframe>
  </div>

  <div class="sixteen columns">
    <hr />
  </div>

  <div class="eight columns">
    <h3>Rankings</h3>
    <p>Relative rank for category in given country</p>
    <ul class="square">
      <% @countries.each do |country| %>
      <% vids = country.videos.where(term: @term) %>
      <% rank = vids.index(@video) %>
      <li>
        #<%= rank+1 %> in <%= country.name.downcase.capitalize%>
      </li>
      <% end %>
    </ul>
  </div>

  <div class="eight columns">
    <h3>Social Stats</h3>
    <p>Courtesy of SharedCount.com</p>
    <ul class="square">
      <li><%= @shared[:commentcount] %> <strong>Facebook comments</strong></li>
      <li><%= @shared[:likecount] %> <strong>Facebook likes</strong></li>
      <li><%= @shared[:sharecount] %> <strong>Facebook shares</strong></li>
      <li><%= @shared[:tweets] %> <strong>Tweets</strong></li>
      <li><%= @shared[:plus_ones] %> <strong>Google +1's</strong></li>
      <li><%= @shared[:pins] %> <strong>Pins</strong></li>
    </ul>
  </div>

</div>